    <% @bikes.each do | bike | %>
        <div class="bike-card d-flex flex-column justify-content-between">
            <div>
                <div>
                    <img class="picture"src= <%= bike.photo_url %> >
                </div>
                <div class="info m-2">
                    <p>  <%= bike.brand %> </p>
                    <p> <%= bike.description %> </p>
                </div>
            </div>
            <div class="bottom">
                <p> <%= bike.price.round %>â‚¬</p>
                <%= link_to "View Bike", bike_path(bike), class: "btn btn-primary border-0 rounded-lg shadow" %>
            </div>
        </div>
    <% end %>
</div>

<div class="bike">
    <h1 class="m-3"><%= @bike.brand %></h1>
    <%# <p><%= image_tag @bike.photo, alt: 'Bike Photo', class: 'bike-image' %> </p>
    <img class="single-bike" src= <%= @bike.photo_url %> >
    <div class="bike-info m-3">
        <p><strong>Brand:</strong>
        <%= @bike.brand %></p>
        <p><strong>Description:</strong>
        <%= @bike.description %></p>
        <p><strong>Price:</strong> <%= @bike.price.round %>€</p>
        <%# <div class="d-grid gap-2">
            <%= link_to 'Rent me!', bike_bookings_path(@bike), class: "btn btn-primary" %>
        <%# </div> %>
    </div>

<!-- Booking form below -->
    <%= simple_form_for [@bike, @booking] do |f| %>
        <%= f.input :start_date, as: :date, start_day: Date.today, html5: true %>
        <%= f.input :end_date, as: :date, html5: true %>
        <%= f.input :total_price %>
        <%= f.submit "Book now", class: "btn btn-primary" %>
        <p>Price: <%= @bike.price.round %> €</p>
        <% end %>

    <h2>Reviews about this bike</h2>
    <div class="reviews">
        <div class="user-name-container">
            <a> <strong> <%= @bike.renter %> </strong> </a>

            <a>  <%= (@bike.rating).times do %>
            <a>  <%=   puts "Star emoji" %> </a>
                <%  end %>/5 </a> 
        </div>
        <div class="user-review">
            <p> <em> " <%= @bike.review %> "</em> </p>
        </div>
    </div>
</div>
